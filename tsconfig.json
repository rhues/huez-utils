{
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "Node",
    "lib": ["es2022"]
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts"]
}
